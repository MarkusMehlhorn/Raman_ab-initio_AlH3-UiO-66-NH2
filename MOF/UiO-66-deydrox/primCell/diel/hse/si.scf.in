&CONTROL
  calculation = 'scf'
  pseudo_dir = '/home/clemens/pseudos/'
/

&SYSTEM
  ibrav =  2
  celldm(1) = 10.26
  nat =  2
  ntyp = 1
  ecutwfc = 40                            !optimieren, mehr ist besser, ggf ecutrho festlegen
  nbnd = 500                              !optimieren, mehr ist besser
  nosym = .TRUE.
  noinv = .TRUE.

  input_dft = 'hse'
  nqx1 = 1, nqx2 = 1, nqx3 = 1            !optimieren, mehr ist besser, aber uniform bleiben
  x_gamma_extrapolation = .TRUE.
  exxdiv_treatment = 'gygi-baldereschi'
/

&ELECTRONS
  mixing_beta = 0.6                       !ggf noch conv_thr festlegen
/

ATOMIC_SPECIES
  Si 28.086 Si.pbe-mt_fhi.UPF             !keine USPP

ATOMIC_POSITIONS (alat)
  Si 0.0 0.0 0.0
  Si 0.25 0.25 0.25

K_POINTS (automatic)
  6 6 6 0 0 0                             !optimieren, mehr ist besser, muss uniform sein

